<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_300"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.narmware.smartseva.fragment.DetailedFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:id="@+id/card_header"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_launcher"
                    android:id="@+id/img_serv"
                    android:transitionName="MyTransition"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <LinearLayout
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/img_serv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_serv_name"
                        style="@style/font_style"
                        android:text="Title"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="2dp"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_alignParentBottom="true"
                        android:padding="4dp"
                        android:gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_serv_desc"
                        style="@style/font_style"
                        android:text="Cleaner Responsibilities. Include: Cleaning,stocking and supplying designated facility areas Carry out heavy cleaning tasks and special projects."
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="2dp"
                        android:textSize="15sp"
                        android:ellipsize="end"
                        android:layout_alignParentBottom="true"
                        android:padding="4dp"
                        android:gravity="left"
                        android:maxLines="3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <ScrollView
            android:fillViewport="true"
            android:layout_below="@id/card_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

           <android.support.design.widget.TextInputLayout
               android:layout_margin="5dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <EditText
                   android:id="@+id/edt_name"
                   style="@style/font_style"
                   android:hint="Name"
                   android:padding="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
           </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_mobile"
                    style="@style/font_style"
                    android:hint="Mobile Number"
                    android:maxLength="10"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_email"
                    style="@style/font_style"
                    android:hint="E-mail"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_addr"
                    style="@style/font_style"
                    android:hint="Address"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edt_serv"
                    style="@style/font_style"
                    android:hint="Service"
                    android:enabled="false"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_margin="2dp"
                android:background="@drawable/txt_date"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/edt_date"
                    style="@style/font_style"
                    android:editable="false"
                    android:hint="Date"
                    android:padding="10dp"
                    android:layout_toLeftOf="@id/img_date"
                    android:textColor="@color/grey_800"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/img_date"
                    android:background="@android:color/transparent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/ic_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/edt_time"
                    style="@style/font_style"
                    android:editable="false"
                    android:hint="Time"
                    android:layout_toLeftOf="@id/img_time"
                    android:padding="10dp"
                    android:textColor="@color/grey_800"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/img_time"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            </RelativeLayout>

            </LinearLayout>
            <Button
                android:id="@+id/btn_submit"
                android:text="Submit"
                style="@style/font_style"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_submit"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        </android.support.v7.widget.CardView>
        </ScrollView>

    </RelativeLayout>
</FrameLayout>
