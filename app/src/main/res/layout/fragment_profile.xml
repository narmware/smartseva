<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey_200">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_marginTop="2dp"
            android:id="@+id/details_card"
            android:elevation="2dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.CoordinatorLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp">

                    <ImageView
                        android:id="@+id/background"
                        android:background="@color/colorPrimary"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="135dp"/>

                    <ImageView
                        android:id="@+id/prof_img"
                        android:src="@mipmap/ic_launcher_round"
                        android:elevation="5dp"
                        app:layout_anchor="@+id/background"
                        app:layout_anchorGravity="bottom|right"
                        android:layout_marginRight="30dp"
                        android:layout_width="110dp"
                        android:layout_height="110dp" />

                </android.support.design.widget.CoordinatorLayout>

                <LinearLayout
                    android:padding="8dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/prof_name"
                        android:textSize="16sp"
                        android:textColor="@color/grey_900"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/prof_mail"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <ScrollView
            android:layout_below="@+id/details_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                app:cardUseCompatPadding="true"
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/rltv_addr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                        android:text="Address"
                        android:textSize="16sp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/grey_900"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageButton
                        android:id="@+id/img_btn_edit"
                        android:layout_alignParentRight="true"
                        android:background="@android:color/transparent"
                        app:srcCompat="@drawable/ic_edit"
                        android:padding="2dp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/lin_home"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/rltv_addr"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Home : "
                            android:padding="5dp"
                            android:textColor="@color/grey_700"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/prof_addr"
                    android:padding="5dp"
                    android:hint="Address not available"
                    android:textColor="@color/grey_700"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_off"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/lin_home"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Office : "
                            android:padding="5dp"
                            android:textColor="@color/grey_700"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/prof_addr_office"
                            android:hint="Address not available"
                            android:padding="5dp"
                            android:textColor="@color/grey_700"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </ScrollView>

    </RelativeLayout>
</FrameLayout>
